<Window x:Class="TreeGlance.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeGlance"
        mc:Ignorable="d"
        Title="TreeGlance" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <ProgressBar x:Name="pbSpacePart" Minimum="0" Maximum="1000" Height="30" Value="0"/>
                <WrapPanel>
                    <Button Name="btnSelect" Width="100" Height="20" Content="Select" Click="btnSelect_Click"/>
                    <Button x:Name="btnDelete" Width="100" Height="20" Content="Delete"/>
                </WrapPanel>
                <DataGrid x:Name="tblFileInfo" FontSize="16" FontWeight="Bold" Margin="10">
                    <DataGrid.Columns></DataGrid.Columns>
                </DataGrid>
                <DataGrid x:Name="tblDirAnalyse" FontSize="16" FontWeight="Bold" Margin="10">
                    <DataGrid.Columns></DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
